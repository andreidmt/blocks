{
  "name": "@asd14/blocks",
  "version": "0.0.1",
  "description": "REST API framework for Node.js",
  "homepage": "https://github.com/asd-xiv/blocks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asd-xiv/blocks.git"
  },
  "bugs": {
    "url": "https://github.com/asd-xiv/blocks/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt"
  },
  "main": "src/index.js",
  "keywords": [
    "nodejs",
    "api",
    "server",
    "framework"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "----UTIL": "",
    "setup": "rm -rf ./node_modules && npm i && npm audit fix",
    "setup:ci": "npm ci && npm audit fix",
    "update": "npm-check -u",
    "----BUILD": "",
    "----LINT": "",
    "lint:js": "eslint --ext .js src/",
    "lint:md": "markdownlint *.md",
    "lint": "npm run lint:md && npm run lint:js",
    "----TEST": "",
    "start": "nodemon examples/simple.js",
    "test": "node tests/index.js | tap-nirvana",
    "tdd": "nodemon --watch src --watch tests --watch examples --exec \"npm test\"",
    "coverage:report": "nyc npm test && nyc report --reporter=html",
    "coverage:ci": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "@asd14/m": "^3.2.0",
    "@asd14/pluginus": "^2.0.0",
    "@sindresorhus/slugify": "^1.1.0",
    "accepts": "^1.3.7",
    "ajv": "^6.12.6",
    "busboy": "^0.3.1",
    "connect": "^3.7.0",
    "content-type": "^1.0.4",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "debug": "^4.2.0",
    "helmet": "^4.2.0",
    "path-to-regexp": "^6.2.0",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "@asd14/eslint-config": "^5.17.0",
    "@asd14/fetch-node": "^1.2.2",
    "babel-eslint": "^10.1.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "jsonwebtoken": "^8.5.1",
    "markdownlint-cli": "^0.24.0",
    "nodemon": "^2.0.6",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "riteway": "^6.2.1",
    "semantic-release": "^17.2.2",
    "tap-nirvana": "^1.1.0"
  }
}
